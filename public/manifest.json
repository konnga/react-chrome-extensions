{
  "name": "react-chrome-extensions",
  "description": "react 开发浏览器扩展程序",
  "author": "konnga",
  "version": "1.0.0",
  "manifest_version": 2,
  "homepage_url": "https://github.com/konnga/react-chrome-extensions",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "icons": {
    "16": "32.png",
    "48": "32.png",
    "64": "32.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "browser_action": {
    "default_icon": "32.png",
    "default_title": "react-chrome-extensions",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' object-src 'self'"
}
